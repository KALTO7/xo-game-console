main()
{int a,b,c,d;
    char A;

  cout<<"\t\t\t.-----------------------------------.\n"            // HELLO SCREEN
        "\t\t\t.------------ Hello ^_^ ------------.\n"
        "\t\t\t.- am robot i will play first (x)  -.\n"
        "\t\t\t.-----------------------------------.\n";

         main_screen:                                             // It like auto back  when user inter wrong number "use goto"
              system("color a0");                                             // This function set a color
/*        list of color
    0 = Black       8 = Gray
    1 = Blue        9 = Light Blue
    2 = Green       A = Light Green
    3 = Aqua        B = Light Aqua
    4 = Red         C = Light Red
    5 = Purple      D = Light Purple
    6 = Yellow      E = Light Yellow
    7 = White       F = Bright White  */

 cout<<"robot play\n";
    cout<<"\t****************************\n"                                     // main screen
          "\t*|------------------------|*\n"
          "\t*|   1   |   2    |   3   |*\n"
          "\t*|       |        |       |*\n"
          "\t*|------------------------|*\n"
          "\t*|   4   |   X    |   6   |*\n"
          "\t*|       |        |       |*\n"
